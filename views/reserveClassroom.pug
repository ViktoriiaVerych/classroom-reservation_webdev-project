doctype html
html
  head
    title Reserve Classroom
    link(rel='stylesheet', href='/css/style_reserveClassroom.css')
  body
    .reservation-container
      h1 Reserve a Classroom
      form(action='/api/reservations', method='POST')
        .form-group
          label(for='classroomId') Classroom ID
          input(type='text', name='classroomId', required=true)
        .form-group
          label(for='userId') User ID
          input(type='text', name='userId', required=true)
        .form-group
          label(for='startTime') Start Time
          input(type='datetime-local', name='startTime', required=true)
        .form-group
          label(for='duration') Duration (in hours)
          input(type='number', name='duration', required=true)
        .form-group
          label(for='status') Status
          select(name='status', required=true)
            option(value='reserved') Reserved
            option(value='available') Available
        button(type='submit') Reserve
